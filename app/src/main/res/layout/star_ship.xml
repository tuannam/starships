<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ship_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:weightSum="1"
    >
    <TextView
        android:id="@+id/ship_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/AppTheme.NormalTextStyle"
        android:text="Light Fighter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/fav_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/unchecked"
        />

    <ImageView
        android:id="@+id/ship_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:layout_above="@+id/ship_name"
        android:src="@drawable/mobile_battlestation" />

</RelativeLayout>